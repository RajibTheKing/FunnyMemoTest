<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	
	package="com.facebook.android" 
	android:versionCode="1"
	android:versionName="1.0">
	
	<application android:icon="@drawable/icon" 
	    android:label="@string/app_name"
		android:debuggable="true">
		<activity android:name=".Example" 
		    android:label="@string/app_name"
		    android:configChanges="keyboardHidden">
			<intent-filter>
				<action android:name="com.facebook.android.EXAMPLE" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity
            android:name=".project.startingPoint"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity
            android:name=".project.FrontPage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.facebook.android.project.FRONTPAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".project.ShowLevelPage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.facebook.android.project.SHOWLEVELPAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".project.GamePage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.facebook.android.project.GAMEPAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".project.UserInputPage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.facebook.android.project.USERINPUTPAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".project.GameOverPage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.facebook.android.project.GAMEOVERPAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".project.NextLevel"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.facebook.android.project.NEXTLEVEL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
	</application>
	
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-sdk android:minSdkVersion="3"/>
</manifest> 